<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="card card-block">
      <h2>Ändra lösenord</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <%= f.label :password, "Nytt lösenord" %><br />
          <% if @minimum_password_length %>
            <em>(Minst <%= @minimum_password_length %> tecken)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Bekräfta nytt lösenord" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>

        <div class="actions content-right">
          <%= f.submit "Ändra lösenord", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
